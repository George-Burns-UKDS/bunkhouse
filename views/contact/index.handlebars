<link rel="stylesheet" href="/css/contact/index.css">

<div class="container">

    <div id="contact-container">
        {{#if successMessage}}
        <div class="message center">
            <p>{{successMessage}}</p>
        </div>
        {{else}}

        {{/if}}
        <div class="row">
            <div class="col s12">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d79516.46949777515!2d-3.2484226704119994!3d51.4785394053433!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x486e1cb1759707a3%3A0xaf4b55de99943e9e!2sBunkhouse!5e0!3m2!1sen!2suk!4v1570103880681!5m2!1sen!2suk"
                    width="100%" height="300" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
        </div>
        <form action="/submit-email" method="POST">
            <div class="row">
                <div class="input-field col s12 m6">
                    <input placeholder="Bunk" id="first_name" name="first_name" type="text" class="validate" required>
                    <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s12 m6">
                    <input placeholder="House" id="last_name" name="last_name" type="text" class="validate" required>
                    <label for="last_name">Last Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="info@bunkhousecardiff.co.uk" id="email" name="email" type="email"
                        class="validate" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Hello" id="subject" name="subject" type="text" class="validate" required>
                    <label for="subject">Subject</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea placeholder="Type your message here..." id="body" name="body" type="text"
                        class="materialize-textarea validate" required></textarea>
                    <label for="body">Message</label>
                </div>
            </div>
            <div class="row center">
                <div class="col s12">
                    <button class="waves-effect waves-light btn">SEND!</button>
                </div>
            </div>
        </form>
    </div>
</div>